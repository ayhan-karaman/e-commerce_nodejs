extends ../layouts/main-layout.pug
block content 
    .row.d-flex.justify-content-center.mt-5
        .col-md-8
            if categories.length > 0
                    h3.text-muted.mt-4.mb-4.text-center Admin Categories Page
                    table.table.table-hover.mt-3
                        thead 
                            tr 
                                th Category Name 
                                th Description  
                                th(colspan="4") 
                                    a(href="/admin/add-category", style="text-decoration:none; font-size:30px").text-success + 
                                        small(style="font-size:13px").text-dark  Add New Category
                        tbody 
                            each category in categories  
                                tr 
                                    td #{category.name}
                                    td #{category.description}
                                    td 
                                        a(href=`/admin/update-category/${category.id}`).btn.btn-outline-warning 
                                            i.fas.fa-edit(style="font-size:20px" title="Update Product")
                                        form(action="/admin/delete-category", method="post" style="display:inline") 
                                            input(type="hidden", name="id" value=`${category._id}`)
                                            button(type="submit").btn.btn-outline-danger
                                                i.fas.fa-trash(style="font-size:20px" title="Delete Product")
            else 
                 .alert.alert-danger.text-center.mb-5 Not Category
                 a(href="/admin/add-category" style="font-size:20px; display:block").text-center.text-success.mt-5 To add a category, go to the add page 
